<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>
    @{
        var env = System.Configuration.ConfigurationManager.AppSettings["environment"];

        if (env != "Production")
        {
            <div class="alert alert-info text-center" role="alert">
                Environment: <strong>@env</strong>.
            </div>
        }
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sample Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Employees", "Index", "Employees", null, new { id = "employees_menu" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <span class="pull-left" id="yearSpan">&copy; @DateTime.Now.Year - My ASP.NET Application</span>

            <span class="pull-right">Version: @ViewContext.Controller.GetType().Assembly.GetName().Version</span>
        </footer>
    </div>


</body>
@RenderSection("scripts", required: false)
</html>
